<% @game.guesses.select(&:persisted?).each do |guess| %>
  <%= content_tag(:div, class: 'flex-direction-row cell-row') do %>
    <% guess.code_pegs.each do |code_peg| %>
      <%= content_tag(:div, nil, class: "code-peg #{code_peg} cell-spacing") %>
    <% end %>
    <% guess.key_pegs.each do |key_peg| %>
      <%= content_tag(:div, nil, class: 'key-peg-cell') do %>
        <%= content_tag(:div, nil, class: "key-peg #{key_peg}") %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
<%= render(partial: 'guesses/form', locals: { game: @game }) %>
